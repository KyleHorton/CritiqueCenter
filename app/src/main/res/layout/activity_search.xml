<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kylehorton.ser210.quinnipiac.edu.critiquecenter.SearchActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/searchTopic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Select a genre!"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="30dp" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Type in an item!"
            android:textColor="#000000"
            android:textSize="30dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Enter topic here" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#000753"
            android:text="Search Review"
            android:textColor="#ffffff" />


    </LinearLayout>
